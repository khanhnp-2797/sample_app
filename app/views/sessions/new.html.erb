<% provide(:title, t("sessions.title")) %>
<h1 class="center"> <%= t "sessions.heading"%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t("sessions.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t("sessions.password") %>
      <%= link_to t("forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label t("sessions.remember_me"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("sessions.remember_me") %></span>
      <% end %>
      <%= f.submit t("sessions.login_acount"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
